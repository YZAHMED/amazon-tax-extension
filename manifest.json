{
  "manifest_version": 3,
  "name": "Amazon Tax Calculator",
  "version": "1.0",
  "description": "Show final price with tax on Amazon product pages",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://www.amazon.ca/*",
    "https://www.amazon.com/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.in/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.ca/*",
        "https://www.amazon.com/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://www.amazon.in/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
